@{
    string reservavacunas = "";
    string reservavacunas_mis = "";
    string reservavacunas_total = "";
    string reservaVacunasSinTroquel = "";
    string strController = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    switch (strController)
    {
        case "reservavacunas":
            bool isSinTroquel = false;
            if (System.Web.HttpContext.Current.Session["clientes_pages_reservavacunas_SinTroquel"] != null &&
               Convert.ToBoolean(System.Web.HttpContext.Current.Session["clientes_pages_reservavacunas_SinTroquel"]))
            {
                isSinTroquel = true;
            }
            if (isSinTroquel)
            {
                reservaVacunasSinTroquel = " class=\"active\" ";
            }
            else
            {
                reservavacunas = " class=\"active\" ";
            }

            break;
        case "reservavacunas_mis":
            reservavacunas_mis = " class=\"active\" ";
            break;
        case "reservavacunas_total":
            reservavacunas_total = " class=\"active\" ";
            break;
        default:
            break;
    }

}
<div class="row">
    <div class="col-xs-12">
        <div class="nav_sec">
            @{
                if (Kellerhoff.Controllers.mvcController.isUsuarioConPermisoPedido())
                {
                    <a href="/mvc/reservavacunas" @{ WriteLiteral(reservavacunas);}><i class="fa fa-file-text-o" title="RESERVAR VACUNAS"></i><span>RESERVAR VACUNAS</span></a>
                    <div class="separate"></div>

                    <a href="/mvc/reservavacunas?t=1" class="oferta  " @{ WriteLiteral(reservaVacunasSinTroquel);}><i class="fa fa-file-text-o" title="RESERVAR VACUNAS TROQUEL ANULADO"></i><span class="hidden-sm hidden-xs hidden-md">RESERVAR VACUNAS TROQUEL ANULADO</span></a>
                    <div class="separate "></div>
                }
            }
            <a href="/mvc/reservavacunas_mis" @{ WriteLiteral(reservavacunas_mis);}><i class="fa fa-file-text-o" title="MIS RESERVAS"></i><span>MIS RESERVAS</span></a>
            <div class="separate"></div>
            <a href="/mvc/reservavacunas_total" @{ WriteLiteral(reservavacunas_total);}><i class="fa fa-file-text-o" title="TOTAL RESERVAS"></i><span>TOTAL RESERVAS</span></a>
            <div class="clear0"></div>
        </div>
    </div>
</div>