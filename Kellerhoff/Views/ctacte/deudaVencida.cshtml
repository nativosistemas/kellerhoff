@Html.Partial("_nav_ctacte")
@section sectionHidden{

    @{
        string resultado_sub = string.Empty;
        if (HttpContext.Current.Session["clientesDefault_Cliente"] != null)
        {
            HttpContext.Current.Session["ctacte_deudaVencida"] = null;
            HttpContext.Current.Session["ctacte_saldoSinImputar"] = null;
            List<Kellerhoff.ServiceReferenceDLL.cCtaCteMovimiento> l = Kellerhoff.Controllers.ctacteController.getHiddenDeudaVencida(((Kellerhoff.Codigo.capaDatos.cClientes)Session["clientesDefault_Cliente"]).cli_login);
            if (l != null)
            {
                decimal? limiteSaldo = WebService.RecuperarLimiteSaldo();
                DateTime fechaActual = DateTime.Now;
                DateTime Fecha = DateTime.Today;
                DateTime fechaHasta = Fecha.AddDays(1);
                List<Kellerhoff.ServiceReferenceDLL.cCtaCteMovimiento> l_deudaVencida = l.Where(x => x.FechaVencimiento.HasValue && x.FechaVencimiento.Value < fechaHasta && x.Saldo.HasValue && limiteSaldo.HasValue && x.Saldo > limiteSaldo).ToList();
                List<Kellerhoff.ServiceReferenceDLL.cCtaCteMovimiento> l_saldoSinImputar = l.Where(x => x.Saldo != null && x.Saldo.Value < 0).ToList();
                HttpContext.Current.Session["ctacte_deudaVencida"] = l_deudaVencida;
                HttpContext.Current.Session["ctacte_saldoSinImputar"] = l_saldoSinImputar;
                resultado_sub += "<input type=\"hidden\" id=\"hiddenListaDeudaVencida\" value=\"" + Server.HtmlEncode(Kellerhoff.Codigo.clases.Generales.Serializador.SerializarAJson(l_deudaVencida)) + "\" />";
                resultado_sub += "<input type=\"hidden\" id=\"hiddenListaSaldoSinImputar\" value=\"" + Server.HtmlEncode(Kellerhoff.Codigo.clases.Generales.Serializador.SerializarAJson(l_saldoSinImputar)) + "\" />";
            }
        }
        WriteLiteral(resultado_sub);
    }
}
@section Scripts{
    @Html.Partial("_scriptsCtacte")

    <script type="text/javascript">

        jQuery(document).ready(function () {
            if (listaDeudaVencida == null) {
                listaDeudaVencida = eval('(' + $('#hiddenListaDeudaVencida').val() + ')');
                if (typeof listaDeudaVencida == 'undefined') {
                    listaDeudaVencida = null;
                }
            }
            if (listaSaldoSinImputar == null) {
                listaSaldoSinImputar = eval('(' + $('#hiddenListaSaldoSinImputar').val() + ')');
                if (typeof listaSaldoSinImputar == 'undefined') {
                    listaSaldoSinImputar = null;
                }
            }
            CargarHtmlDeudaVencida();
            CargarHtmlSaldoSinImputar();
        });

        //
    </script>

}

